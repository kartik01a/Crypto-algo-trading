# MongoDB (optional - for trade persistence)
MONGODB_URI=

# Log directory (default: ./logs)
LOG_DIR=./logs

# CoinDCX API (required for real trading)
BINANCE_API_KEY=
BINANCE_SECRET=

# Safety modes
# DRY_RUN=true  -> Simulate orders, no real execution
# DRY_RUN=false -> Real orders on Binance
DRY_RUN=true

# Kill switch: stop trading if loss exceeds this % (default 10)
KILL_SWITCH_LOSS_PERCENT=10

# Swing strategy debug (optional)
# DEBUG_SWING=true  -> Log signal flow (index, htfIndex, trend, conditions)
# DEBUG_TRADES=true -> Force uptrend, loosen all filters (test mode)
